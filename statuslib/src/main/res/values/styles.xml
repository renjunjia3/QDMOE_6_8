<resources>

  <!--Default Style-->
  <style name="DefaultSmartStyle">
    <item name="loading_layout">@layout/status_loading_layout</item>
    <item name="none_content">@layout/status_none_layout</item>
    <item name="network_content">@layout/status_no_network_layout</item>
    <item name="failed_content">@layout/status_fail_layout</item>
  </style>
  <declare-styleable name="MyCircleProgressBar">
    <attr name="cpb_strokeWidth" format="dimension" />
    <attr name="cpb_startColor" format="color"/>
    <attr name="cpb_endColor" format="color"/>
    <attr name="cpb_duration" format="integer"/>
  </declare-styleable>
</resources>

