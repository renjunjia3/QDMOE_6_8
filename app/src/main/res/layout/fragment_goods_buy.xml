<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:orientation="vertical">

    <include layout="@layout/toolbar_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/goods_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/goods_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textColor="#F1CF9F"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:text="价格"
                            android:textColor="#F1CF9F"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/goods_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@+id/text"
                            android:text=""
                            android:textColor="#F2517A"
                            android:textSize="@dimen/text_size_big" />

                        <TextView
                            android:id="@+id/goods_old_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/goods_price"
                            android:text=""
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/text_size_small"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_less"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_bg_number_less"
                        android:gravity="center"
                        android:text="—"
                        android:textColor="#F2CE9C"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/numbers_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="1"
                        android:textColor="#F2CE9C"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/number_add"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_bg_number_less"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#F2CE9C"
                        android:textSize="@dimen/text_size_big" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共"
                        android:textColor="#938061"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/numbers_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#938061"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="件商品"
                        android:textColor="#938061"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="￥0"
                        android:textColor="#F2517A"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#46433E" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#46433E" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333333"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="收货人"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_middle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_middle"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/receiver_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_bg_number_less"
                        android:lines="1"
                        android:padding="5dp"
                        android:textColor="@android:color/white"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/text_size_middle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="联系电话"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_middle" />

                    <EditText
                        android:id="@+id/receiver_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/shape_bg_number_less"
                        android:inputType="number"
                        android:lines="1"
                        android:padding="5dp"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/text_size_middle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_middle" />

                    <TextView
                        android:id="@+id/province"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_number_less"
                        android:hint="省"
                        android:padding="5dp"
                        android:textColor="#F1CF9F"
                        android:textColorHint="#c6c5c5" />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_number_less"
                        android:hint="市"
                        android:padding="5dp"
                        android:textColor="#F1CF9F"
                        android:textColorHint="#c6c5c5" />

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_number_less"
                        android:hint="区"
                        android:padding="5dp"
                        android:textColor="#F1CF9F"
                        android:textColorHint="#c6c5c5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_middle"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/receiver_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_bg_number_less"
                        android:hint="详细地址"
                        android:lines="1"
                        android:padding="5dp"
                        android:textColor="#F1CF9F"
                        android:textColorHint="#c6c5c5"
                        android:textCursorDrawable="@drawable/edit_cursor_color"
                        android:textSize="@dimen/text_size_middle" />
                </LinearLayout>

                <RadioGroup
                    android:visibility="gone"
                    android:id="@+id/pay_way_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_middle"
                        android:visibility="invisible" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/ic_goods_pay_way_selector"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="微信支付"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_big" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/ic_goods_pay_way_selector"
                        android:paddingLeft="5dp"
                        android:text="支付宝支付"
                        android:textColor="#F1CF9F"
                        android:textSize="@dimen/text_size_big" />

                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#46433E" />


            <com.mzhguqvn.mzhguq.ui.view.verticalrollingtextview.VerticalRollingTextView
                android:id="@+id/notice_textView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#333333"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#F1CF9F"
                android:textSize="@dimen/text_size_middle"
                app:animInterval="5000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#46433E" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#46433E" />

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#333333"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/comment_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="宝贝评价（18）"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_size_large" />

                <com.mzhguqvn.mzhguq.ui.view.CustomListView
                    android:id="@+id/comment_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:divider="#46433E"
                    android:dividerHeight="1dp"
                    android:listSelector="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#46433E" />

            <TextView
                android:id="@+id/see_all_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="#F1D09D"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="10dp"
                android:text="查看全部"
                android:textColor="#282828"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#46433E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买商品赠送会员"
            android:textColor="#F1CF9F"
            android:textSize="@dimen/text_size_middle" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价值"
            android:textColor="#F1CF9F"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥38"
            android:textColor="#F15177"
            android:textSize="@dimen/text_size_middle" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="立即购买"
            android:textColor="#F15177"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

</LinearLayout>