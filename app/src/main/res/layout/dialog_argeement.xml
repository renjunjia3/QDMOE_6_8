<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_agreement_dialog_title_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="用户协议"
            android:textColor="#282828"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_agreement_close" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_agreement_dialog_content_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadeScrollbars="true"
            android:maxHeight="200dp"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_middle" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@drawable/ic_checkbox_selector"
            android:checked="true"
            android:padding="10dp"
            android:text="我已阅读并同意以上协议"
            android:textColor="#B2B2B2"
            android:textSize="@dimen/text_size_middle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_agreement_cancel_btn_bg"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="3dp"
                android:text="取消"
                android:textColor="#B2B2B2"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_blue_btn_bg"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="3dp"
                android:text="同意"
                android:textColor="#3ec7ef"
                android:textSize="@dimen/text_size_large" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>